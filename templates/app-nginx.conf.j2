server {
  listen 80;
  listen [::]:80;
  server_name {{ domain_names | join(" ") }};
  client_max_body_size {{ django_max_fileupload_size }};

  set_real_ip_from 0.0.0.0/0;
  real_ip_header X-Real-IP;
  real_ip_recursive on;

  location / {
    uwsgi_pass unix://{{ django_uwsgi_socket }};
    include uwsgi_params;
  }

  location /static/ {
    alias {{ django_project_path }}/{{ django_project_title }}/static/;
    expires {{ nginx_cache_static_files }};
  }
  location /media/ {
    alias {{ django_project_path }}/{{ django_project_title }}/media/;
    expires {{ nginx_cache_static_files }};
  }
  location /static/admin/ {
    alias {{ django_project_path }}/{{ django_project_title }}/venv/lib/python3.7/site-packages/django/contrib/admin/static/admin/;
    expires {{ nginx_cache_static_files }};
  }


}
